        97% { transform: translate(2px, -2px); filter: hue-rotate(180deg); }
        98% { transform: translate(-1px, -1px); filter: hue-rotate(270deg); }
        99% { transform: translate(1px, 1px); filter: hue-rotate(360deg); }
    }

    @keyframes shimmer {
        0% { background-position: 0% center; }
        100% { background-position: 200% center; }
    }

    @keyframes flicker {
        0%, 19.999%, 22%, 62.999%, 64%, 64.999%, 70%, 100% {
            opacity: 1;
            filter: drop-shadow(0 0 5px rgba(6, 182, 212, 0.5));
        }
        20%, 21.999%, 63%, 63.999%, 65%, 69.999% {
            opacity: 0.8;
            filter: drop-shadow(0 0 2px rgba(6, 182, 212, 0.3));
        }
    }

    .chad-logo-container::after {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(
            90deg,
            transparent,
            rgba(6, 182, 212, 0.2),
            transparent
        );
        animation: scan 3s infinite;
    }

    @keyframes scan {
        0% { left: -100%; }
        100% { left: 100%; }
    }
</style>
