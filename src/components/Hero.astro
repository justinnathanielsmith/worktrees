<style>
    .hero {
        padding-top: 15rem;
        padding-bottom: 15rem;
        text-align: left;
    }

    .hero h1 {
        font-size: clamp(3.5rem, 15vw, 15rem);
        line-height: 0.8;
        margin-bottom: 3rem;
        color: var(--white);
        transform: translateX(-0.05em);
        font-weight: 900;
    }

    .hero h1 span {
        display: block;
        color: transparent;
        -webkit-text-stroke: 1.5px var(--white);
    }

    .hero-meta {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 6rem;
    }

    .hero-meta p {
        font-size: 1.5rem;
        max-width: 35ch;
        color: #888;
        font-weight: 400;
    }

    .cta-wrap {
        position: relative;
        display: inline-block;
    }

    .cta-button {
        display: inline-block;
        background: var(--gold);
        color: var(--black);
        padding: 2rem 4rem;
        font-family: 'Bebas Neue', sans-serif;
        font-size: 2rem;
        text-decoration: none;
        transition: var(--transition);
        border: none;
        cursor: pointer;
        z-index: 2;
        position: relative;
    }

    .cta-button:hover {
        background: var(--white);
        color: var(--black);
    }

    .cta-shadow {
        position: absolute;
        top: 8px;
        left: 8px;
        width: 100%;
        height: 100%;
        border: var(--border-width) solid var(--white);
        z-index: 1;
        transition: var(--transition);
    }

    .cta-wrap:hover .cta-shadow {
        transform: translate(-4px, -4px);
        border-color: var(--gold);
    }

    @media (max-width: 900px) {
        .hero-meta { grid-template-columns: 1fr; gap: 4rem; }
    }
</style>

<script>
    // Magnetic Button Effect (Minimal)
    const buttons = document.querySelectorAll('.cta-button');
    buttons.forEach(btn => {
        btn.addEventListener('mousemove', (e) => {
            const rect = btn.getBoundingClientRect();
            const x = (e as MouseEvent).clientX - rect.left - rect.width / 2;
            const y = (e as MouseEvent).clientY - rect.top - rect.height / 2;
            (btn as HTMLElement).style.transform = `translate(${x * 0.1}px, ${y * 0.1}px) scale(1.05)`;
        });
        btn.addEventListener('mouseleave', () => {
            (btn as HTMLElement).style.transform = `translate(0, 0) scale(1)`;
        });
    });
</script>
